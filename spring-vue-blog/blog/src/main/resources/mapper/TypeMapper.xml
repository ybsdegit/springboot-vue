<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.ybs.blog.mapper.TypeMapper">
    <!-- 通用查询映射结果 -->
    <resultMap id="BaseResultMap" type="com.ybs.blog.pojo.Type">
        <id column="type_id" property="typeId"/>
        <result column="type_name" property="typeName"/>
        <result column="type_blog_count" property="typeBlogCount"/>
        <result column="enable" property="enable"/>
        <result column="deleted" property="deleted"/>
    </resultMap>

    <!-- 通用查询结果列 -->
    <sql id="Base_Column_List">
        type_id, type_name, type_blog_count, enable, deleted
    </sql>
    <insert id="insert" parameterType="com.ybs.blog.pojo.Type">
        insert into bl_type(type_name) values(
            #{typeName}
        )
    </insert>
    <update id="update" parameterType="com.ybs.blog.pojo.Type">
        update bl_type set
        version = version + 1
        <if test="typeName!=null and typeName != ''">
            type_name = #{typeName}
        </if>
        <if test="typeBlogCount!=null and typeBlogCount!=''">
            type_blog_count = #{typeBlogCount},
        </if>
        <if test="enable!=null">
            enable = #{enable},
        </if>
        where type_id = #{typeId}
        and version = #{version}
    </update>
   <!-- <update id="update" parameterType="com.ybs.blog.pojo.Type">
        update bl_type
        <set>
            <if test="typeName!=null and typeName!=''">
                type_name = #{typeName},
            </if>
            <if test="typeBlogCount!=null and typeBlogCount!=''">
                type_blog_count = #{typeBlogCount},
            </if>
            <if test="enable!=null">
                enable = #{enable},
            </if>
        </set>
        where type_id = #{typeId}
    </update>-->

    <update id="deleteById">
        update bl_type set
        deleted = 1
        where type_id = #{value}
    </update>
    <select id="getByName" resultMap="BaseResultMap">
        select
        type_id, type_name, type_blog_count
        from bl_type
        where deleted = 0
        and type_name = #{value}
    </select>
    <select id="getAll" resultMap="BaseResultMap">
        select
        type_id, type_name, type_blog_count, enable
        from bl_type
        where deleted = 0
    </select>
    <select id="getTypeList" resultMap="BaseResultMap">
        select
        type_id, type_name, type_blog_count
        from bl_type
        where deleted = 0
        and enable = 1
    </select>
    <select id="getById" resultMap="BaseResultMap">
        select
        type_id, type_name, type_blog_count, enable
        from bl_type
        where type_id = #{value}
        and deleted = 0
    </select>

</mapper>
